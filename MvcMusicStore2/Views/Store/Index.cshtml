    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

@model List <MvcMusicStore2.Models.Genre>

@{
    ViewBag.Title = "Store";
}
<h3>Browse Genres</h3>
<p>
    Select from @Model.Count()
    genres:
</p>
<ul>
    @foreach (var item in Model)
    {
        //<li>@item.Name</li>
        <li>
            @Html.ActionLink(item.Name,
            "Browse", new { genre = item.Name })
        </li>
    }
</ul>

